@model Eksamen.Models.Product


<div class="col">
    <div>
        <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductId">

            <img src="@Model.ImageUpload" class="card-img-top" alt="@Model.Name" style="max-width: 400px; max-height: 400px">
        </a>
            <div>
                <div class="d-flex justify-content-between mt-2">
                    <h5 class="text-start">
                        @Model.Name
                    </h5>
                    <h5 class="text-nowrap">
                        Energy: @Model.Energy
                    </h5>
                </div>
                <div class="d-flex justify-content-between mt-2">
                    <h5 class="text-nowrap">
                        
                            <a asp-controller="Product"
                               asp-action="Details"
                               asp-route-id="@Model.ProductId">Details</a>
                    </h5>
                </div>
            </div>
           
    </div>
</div>