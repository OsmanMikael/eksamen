@model Eksamen.ViewModels.ProductsViewModel

<h2>Products</h2>
<p>
    <a asp-action="Create">Add new product</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>ProductId</th>
            <th>Name</th>
            <th>ProducerID</th>
            <th>Energy</th>
            <th>Fat</th>
            <th>Saturates</th>
            <th>Carbs</th>
            <th>Sugars</th>
            <th>Protein</th>
            <th>Salt</th>
            <th>Picture</th>
            <th>Description</th>



            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.Name</td>
                <td>@product.ProducerID</td>
                <td>@product.Energy</td>
                <td>@product.Fat</td>
                <td>@product.Saturates</td>
                <td>@product.Carbs</td>
                <td>@product.Sugars</td>
                <td>@product.Protein</td>
                <td>@product.Salt</td>
                <td>
                    <img src="@product.ImageUpload" alt="Image of @product.Name" style="max-width: 80px; max-height: 80px;" />
                </td>
                <td>
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId">More info...</a>
                </td>
                
                <td>
                    <a href="@Url.Action("Update", new { id = product.ProductId })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = product.ProductId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
