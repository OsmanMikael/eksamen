@model Eksamen.Models.Product


<h2>Add new food product</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">Product name</label>
        <input type="text" name="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Energy">Energy</label>
        <input type="number" name="Energy" class="form-control" required />
    </div>
    <div>
        <label for="Fat">Fat (g)</label>
        <input type="number" name="Fat" class="form-control" required />
    </div>
   
    <div class="form-group">
        <label for="Saturates">Saturates (g)</label>
        <input type="number" name="Saturates" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Carbs">Carbs (g)</label>
        <input type="number" name="Carbs" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Sugars">Sugars (g)</label>
        <input type="number" name="Sugars" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Protein">Protein (g)</label>
        <input type="number" name="Protein" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Salt">Salt (g)</label>
        <input type="number" name="Salt" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Upload picture</label>
        <input type="file" name="ImageFile" class="form-control"/>
    </div>
    

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Back</a>
</form>

