@model MatRegistrering.Models.AboutViewModel

@{
    ViewData["Title"] = "About Us";
}


<!-- Mission and Vision Sections -->
<section class="py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow-lg rounded-lg">
                    <div class="card-body p-4">
                        <h3 class="card-title text-primary mb-3">Our Mission</h3>
                        <p class="card-text">@Model.Mission</p>
                    </div>
                    <div class="card-footer bg-dark text-light text-center py-2">
                        <i class="fas fa-bullseye"></i> Driven by Purpose
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow-lg rounded-lg">
                    <div class="card-body p-4">
                        <h3 class="card-title text-primary mb-3">Our Vision</h3>
                        <p class="card-text">@Model.Vision</p>
                    </div>
                    <div class="card-footer bg-dark text-light text-center py-2">
                        <i class="fas fa-globe"></i> Envisioning the Future
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

